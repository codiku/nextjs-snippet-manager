generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model Snippet {
  id       Int      @id @default(autoincrement())
  title    String
  content  String
  language Language
  User     User?    @relation(fields: [userId], references: [id])
  userId   Int?
}

model User {
  id       Int       @id
  email    String
  snippets Snippet[]
}

enum Language {
  python
  javascript
  java
  csharp
  php
  ruby
  swift
  kotlin
  cplusplus
  bash
  css
  nextjs
  nodejs
  react
  rust
  typescript
  html
}
